
<div class="container">
  <div class="well col-sm-12">
    <%= form_tag filter_story_food_path, :method => 'get', class: "index-form" do %>
      Select food <%= collection_select "food","id", Food.all, :id, :name %>      
      <%= submit_tag "Filter", class: "btn btn-default" %>
    <% end %>  
    <% @stories.each do |fstory| %>
        <div class="well well-white">
          <h5><b><%= link_to fstory.title, story_path(fstory) %></b></h5>
          <p></p>
        </div>
    <% end %>
  </div>
</div>