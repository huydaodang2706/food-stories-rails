<div class="container">
  <div class="col-md-8 well">
    <h3>Welcome, <%= @user.name %>!</h3>
    <h4>Email: <%= @user.email %></h4>
    <%# <%= User.most_storie.name  has written the most food stories! %>
  </div>

  <div id="userStoriesShowInfo" class=" well col-sm-10">
    <h4>Your Food Stories:</h4>
    <% @user.stories.each do |story| %>
      <p><%= link_to story.title, story_path(story) %>
      <div id="content-<%= story.id %>"><%= story.content.truncate(200) %>
        <a href='#' data-id ="<%= story.id %>" class='js-more'>Read More</a>
      </div><br>
    <% end %>
  </div>
</div>
